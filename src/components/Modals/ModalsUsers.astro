<!-- Open the modal using ID.showModal() method -->
<dialog
  id="my_modal_0"
  class="modal modal-bottom sm:modal-middle fixed inset-0 bg-black bg-opacity-50 backdrop-blur-sm"
>
  <div class="modal-box">
    <h3 class="font-bold text-lg">Hello!</h3>
    <p class="py-4">Press ESC key or click the button below to close</p>
    <h3
      class="text-2xl md:text-3xl font-semibold text-gray-800 leading-tight tracking-tighter"
    >
      Edit Full Name
    </h3>
    <div class="modal-action">
      <form method="" action="">
        <div class="px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
          <!-- Modal header -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
            <!-- First name -->

            <div class="md:col-span-1">
              <label class="block text-gray-700 mb-2 mt-2" for="first-name">
                First Name
              </label>
              <label
                for="Nombre"
                class="mt-6 relative block rounded-md border border-gray-200 shadow-sm focus-within:border-blue-600 focus-within:ring-1 focus-within:ring-blue-600"
              >
                <input
                  type="text"
                  id="Nombre"
                  name="Nombre"
                  class="peer border-none bg-transparent placeholder-transparent focus:border-transparent focus:outline-none focus:ring-0"
                  placeholder="Username"
                />

                <span
                  class="pointer-events-none absolute start-2.5 top-0 -translate-y-1/2 bg-white p-0.5 text-xs text-gray-700 transition-all peer-placeholder-shown:top-1/2 peer-placeholder-shown:text-sm peer-focus:top-0 peer-focus:text-xs"
                >
                  First Name
                </span>
              </label>
            </div>

            <!-- Middle ContrasÃ±aHash -->
            <div class="md:col-span-1">
              <label class="block text-gray-700 mb-2 mt-2" for="middle-name">
                Middle Name
              </label>
              <label
                for="ContrasenaHash"
                class="mt-6 relative block rounded-md border border-gray-200 shadow-sm focus-within:border-blue-600 focus-within:ring-1 focus-within:ring-blue-600"
              >
                <input
                  type="text"
                  id="ContrasenaHash"
                  name="ContrasenaHash"
                  class="peer border-none bg-transparent placeholder-transparent focus:border-transparent focus:outline-none focus:ring-0"
                  placeholder="Username"
                />

                <span
                  class="pointer-events-none absolute start-2.5 top-0 -translate-y-1/2 bg-white p-0.5 text-xs text-gray-700 transition-all peer-placeholder-shown:top-1/2 peer-placeholder-shown:text-sm peer-focus:top-0 peer-focus:text-xs"
                >
                  Middle Name
                </span>
              </label>
            </div>

            <!-- Last name -->
            <div class="md:col-span-1 md:row-span-2">
              <label class="block text-gray-700 mb-2" for="last-name">
                Last Name
              </label>
              <label
                for="Apellido"
                class="mt-6 relative block rounded-md border border-gray-200 shadow-sm focus-within:border-blue-600 focus-within:ring-1 focus-within:ring-blue-600"
              >
                <input
                  type="text"
                  id="Apellido"
                  name="Apellido"
                  class="peer border-none bg-transparent placeholder-transparent focus:border-transparent focus:outline-none focus:ring-0"
                  placeholder="Username"
                />

                <span
                  class="pointer-events-none absolute start-2.5 top-0 -translate-y-1/2 bg-white p-0.5 text-xs text-gray-700 transition-all peer-placeholder-shown:top-1/2 peer-placeholder-shown:text-sm peer-focus:top-0 peer-focus:text-xs"
                >
                  Last Name
                </span>
              </label>
            </div>
          </div>
          <!-- Modal content -->

          <div class="modal-action mt-11 flex justify-start">
            <button class="btn">Close</button>
            <button
              type="submit"
              class="btn bg-blue-600 hover:bg-blue-700 text-white ml-2"
            >
              Update
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</dialog>
